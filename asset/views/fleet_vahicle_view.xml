<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="fleet_vehicle_inherited_view_form" model="ir.ui.view">
		<field name="name">fleet.vahicle.inherited.view</field>
		<field name="model">fleet.vehicle</field>
		<field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//form//sheet//group[1]//group[1]//field[@name='driver_id']" position="attributes">
				<attribute name="string">User</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[1]//group[1]//field[@name='vin_sn']" position="attributes">
				<attribute name="string">Serial Number</attribute>
			</xpath>
			<xpath expr="//form//sheet//div//label[2]" position="attributes">
				<attribute name="string">Asset ID</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[1]//group[2]//div" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[1]//group[2]//field[@name='acquisition_date']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[2]//group" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[2]//group[2]" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//div//button[@name='return_action_to_open'][4]" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//div//button[@name='return_action_to_open'][3]" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//form//sheet//group[1]//group[2]//label[1]" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
		</field>
	</record>
</odoo>
